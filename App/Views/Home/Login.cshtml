@model  fundagMVC.Classes.DTO.LoginDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FUNDAG | Admin</title>
    <link rel="icon" type="image/png" sizes="96x96" href="~/Imagens/favicon.png">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">
                <div class="auth-box">
                    <div class="content">
                        <div class="header">
                            <div class="logo text-center"><img src="~/Imagens/logo.png" alt="DiffDash"></div>
                            <p class="lead">Acesse sua conta</p>
                        </div>
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            // cria a tag do formulário
                            @Html.AntiForgeryToken() // previne o ataque CSRF
                            @Html.ValidationSummary(true)
                            if (@ViewBag.Message != null)
                            {
                                <div style="border:1px solid red">
                                    @ViewBag.Message
                                </div>
                            }
                                <div class="form-auth-small">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "signin-password" })
                                        @Html.ValidationMessageFor(model => model.UserName)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Senha, new { @class = "control-label" })
                                        @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @id = "signin-password" })
                                        @Html.ValidationMessageFor(model => model.Senha)
                                    </div>                              
                                    <div class="form-group clearfix">
                                        <label class="fancy-checkbox element-left">
                                            <input type="checkbox">
                                            <span>Salvar ?</span>
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">ACESSAR</button>
                                    <div class="bottom">
                                        <span class="helper-text"><i class="fa fa-lock"></i> <a href="page-forgot-password.html">Esqueceu a senha?</a></span>
                                    </div>
                                </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
</html>
